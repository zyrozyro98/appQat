{
  "expo": {
    "name": "تطبيق قات",
    "slug": "qat-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.qatapp.qat",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "التطبيق يحتاج للكاميرا لالتقاط صور المنتجات",
        "NSPhotoLibraryUsageDescription": "التطبيق يحتاج للمكتبة لاختيار صور المنتجات",
        "NSLocationWhenInUseUsageDescription": "التطبيق يحتاج للموقع لتحديد الأسواق القريبة"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#2E7D32"
      },
      "package": "com.qatapp.qat",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "التطبيق يحتاج للوصول إلى الصور لرفع صور المنتجات"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#2E7D32"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
